#loading {
    position: fixed;
    bg-dark();
    text-light();
    text-bold();
    min-width: 280px;
    width: 100%;
    height: 100%;
    z-index: 20;
    flex-center();
    justify-content: center;
    font-size: 46px;

    +on-tablet() {
        font-size: 52px;
    }

    +on-desktop() {
        font-size: 64px;
    }

    &.hide {
        smooth(opacity, 0.6s);
        opacity: 0;
    }
}