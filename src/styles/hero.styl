.hero {
    background-position: center 30%;
    background-size: cover;
    position: relative;

    &::before {
        content: '';
        background: alpha($black, 0.3);
        width: 100%;
        height: 100%;
        min-width: 280px;
        position: absolute;
        left: 0;
    }

    .container {
        text-light();
        position: relative;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
    }

    $h1-size = 36px;
    $h2-size = 24px;

    h1 {
        font-size: $h1-size;
        margin-bottom: 10px;
        smoth();
    }

    h2 {
        display: flex;
        font-size: $h2-size;
        margin-bottom: 10px;

        span:first-child {
            display: block;
            white-space: nowrap;
            overflow: hidden;
            animation: typing 3.6s ease-in-out;

            @keyframes typing {
                0% {
                    width: 0%;
                    padding-right: 0;
                }

                20% {
                    width: 100%;
                    padding-right: 10px;
                }

                80% {
                    width: 100%;
                    padding-right: 10px;
                }

                100% {
                    width: 0%;
                    padding-right: 0;
                }
            }
        }

        &::after {
            content: '|';
            font-weight: 400;
        }

        span {
            hide();
        }
    }

    a {
        margin-top: 10px;
    }

    +on-tablet() {
        h1 {
            font-size: $h1-size + 8px;
        }

        h2 {
            font-size: $h2-size + 4px;
        }
    }

    +on-desktop() {
        h1 {
            font-size: $h1-size + 8px + 8px;
        }

        h2 {
            font-size: $h2-size + 4px + 4px;
        }
    }
}