a.button {
    text-light();
    text-bold();
    font-size: 16px;
    border: 2px solid light;
    padding: 10px 16px;
    display: inline-block;
    smoth();

    &:hover {
        background: $red;
        border-color: $red;
    }

    +on-tablet() {
        font-size: 18px;
    }

    +on-desktop() {
        font-size: 20px;
    }
}