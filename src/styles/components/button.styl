a.button {
    border: 2px solid light
    color: light
    padding: 10px 16px
    display: inline-block
    font-size: 16px
    font-weight: 700
    transition: 0.3s

    &:hover {
        background: red
        border-color: red
    }

    @media (min-width: tablet) {
        font-size: 18px
    }

    @media (min-width: desktop) {
        font-size: 20px
    }
}