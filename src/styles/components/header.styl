header {
    background: light
    color: dark-alpha
    position: fixed
    width: 100%

    @media (min-width: tablet) {
        background: none
    }

    .container {
        display: flex
        align-items: center
        justify-content: space-between
        height: 60px

        @media (min-width: tablet) {
            height: 100px
        }
    }

    &.slim {
        background: light

        .container {
            height: 60px !important
        }
    }

    h1 {
        padding: 0 4px

        img {
            height: 24px

            @media (min-width: tablet) {
                height: 30px
            }
        }
    }

    button {
        span {
            font-size: 30px !important
        }

        @media (min-width: tablet) {
            display: none
        }
    }

    nav {
        display: none
        position: absolute
        top: 100%
        left: 0
        right: 0
        padding: 20px
        background: dark-alpha

        &.active {
            display: block
        }

        @media (min-width: tablet) {
            padding: 0
            display: block
            position: static
            background: none
        }

        ul {
            display: flex
            flex-direction: column
            align-items: center

            @media (min-width: tablet) {
                flex-direction: row
            }

            li {
                padding: 10px 0

                @media (min-width: tablet) {
                    padding: 0 0 0 40px
                }
            }
        }

        a {
            color: light
            font-weight: 700

            @media (min-width: tablet) {
                color: dark-alpha
            }
        }
    }
}