.hero {
    background-position: center 30%;
    background-size: cover;

    &::before {
        content: '';
        background: alpha($black, 0.3);
        width: 100%;
        height: 100%;
        min-width: 280px;
        position: absolute;
        left: 0;
    }

    .container {
        text-light();
        position: relative;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 10px;
        smoth();
    }

    h2 {
        font-size: 20px;
        smoth();
    }

    +on-tablet() {
        h1 {
            font-size: 44px;
        }

        h2 {
            font-size: 24px;
        }
    }

    +on-desktop() {
        h1 {
            font-size: 60px;
        }

        h2 {
            font-size: 32px;
        }
    }

    .button {
        margin-top: 10px;
    }
}