.offer {
    padding: 80px 0;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;

    &::before {
        content: '';
        background: alpha($black, 0.3);
        width: 100%;
        height: 100%;
        min-width: 280px;
        position: absolute;
        top: 0;
    }

    .container {
        flex-center();
        flex-direction: column;
    }

    h1 {
        position: relative;
        text-light();
        font-size: 40px;
        letter-spacing: 2px;
        margin-bottom: 20px;
        text-align: center;
    }

    a {
        position: relative;
        bg-light();
        text-dark();
        font-weight: 700;
        font-size: 18px;
        padding: 10px 18px;
        display: block;
        border-radius: 42px;
        border: 2px solid $white;
        smoth();

        &:hover {
            bg-none();
            text-light();
        }
    }
}