* {
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    min-width: 280px;
    font-family: $rubik;
}

img {
    display: block;
}

a {
    text-decoration: none;
}

ul {
    list-style: none;
}

button {
    display: block;
    line-height: 0;
    border: none;
    bg-none();
}

i {
    text-dark();
}