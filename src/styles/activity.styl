.activity {
    bg-light();
    padding: 60px 0;
    text-align: center;

    +on-tablet() {
        padding: 80px 0;
    }

    a {
        text-dark();
    }

    h1 {
        color: $gray;
        font-size: 32px;
        letter-spacing: 4px;
        margin-bottom: 40px;

        +on-tablet() {
            margin-bottom: 60px;
        }
    }

    ul {
        display: grid;
        grid-template-columns: 1fr;
        gap: 30px;

        +on-tablet() {
            grid-template-columns: 1fr 1fr;
        }

        li {
            border-bottom: 1px solid $gray;

            figure {
                overflow: hidden;
            }

            img {
                smoth();
                width: 100%;
            }

            h4 {
                font-size: 18px;
                opacity: 0.8;
                margin: 10px 0 6px;
            }

            &:hover {
                h4 {
                    opacity: 1;
                }

                img {
                    transform: scale(1.08);
                }
            }
        }
    }
}